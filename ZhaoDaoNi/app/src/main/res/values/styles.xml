<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="push_style">
		<item name="android:hint">@string/style_hint</item>
		<item name="android:inputType">number</item>
		<item name="android:textSize">14sp</item>
	</style>
	<style name="push_alias">
		<item name="android:hint">@string/alias_hint</item>
		<item name="android:textSize">14sp</item>
	</style>
	
	<style name="top_group">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/qq_constact_font</item>
        <item name="android:background">@drawable/qq_constact_group</item>
    </style>
    <style name="top_all">
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/qq_constact_font</item>
        <item name="android:background">@drawable/qq_constact_all</item>
    </style>
	
	<style name="circle_bottom">
	    <item name="android:windowFrame">@null</item>
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:backgroundDimEnabled">true</item>
	</style>
	
	<style  name="commonMarginLeft">
	    <item name="android:layout_marginLeft">6dp</item>
	</style>
	    
	<style  name="commonMarginTop">
	    <item name="android:layout_marginTop">5dp</item>
	 </style>
	  
	<style  name="commonMarginLeftAndTop"  parent="commonMarginLeft">   
	    <item name="android:layout_marginTop">5dp</item>
	</style>
    
	<style  name="commonMarginRight">
	    <item name="android:layout_marginRight">6dp</item>
	    
	</style>
	
	<style name = "commonStyleEditText">
     	<item name="android:layout_height">40.0dip</item>
        <item name="android:layout_marginTop">5.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColorHint">@color/hintColor</item>
        <item name ="android:textStyle">bold</item>
	</style>
	
	<style name = "commonStyleTextView" parent= "commonMarginLeftAndTop">
     	<item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">20sp</item>
	    <item name="android:textColor">#000000</item>
        
	</style>
<!-- -activity_circle  -->		
	<style name = "activity_circle_button_Style">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">fill_parent</item>
    </style>
    
<!-- -add_friend_detail_serach  -->	
	<style name = "add_friend_detail_serach_context_Style"  parent="commonStyleEditText" >
	    <item name="android:layout_width">0dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
	</style>
	
	<style name = "add_friend_detail_search_button_Style">
	    
	    <item name="android:layout_width">90dp</item>
	    <item name="android:layout_marginTop">5.0dip</item>
	    <item name="android:layout_height">50.0dip</item>
        <item name="android:layout_marginRight">10dp</item>
	</style>
	
	<style name = "add_friend_detail_image_view">
	    <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
	</style>
	
<!-- -friend_information_detail  -->	
	<style name = "friend_information_detail_majia_Style" parent= "commonMarginLeftAndTop">
		 <item name="android:layout_width">40.0dip</item>
	     <item name="android:layout_height">40.0dip</item>
	</style>
	
<!-- -friend_information_comment  -->	
<style name = "friend_information_detail_newComment_Style" parent= "commonMarginLeftAndTop">
	 <item name="android:layout_width">fill_parent</item>
	 <item name="android:layout_height">fill_parent</item>
</style>	
</resources>
