<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/whites"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="50.0dip"
    	android:orientation="horizontal" >

        <ImageView
	        android:id="@+id/my_majia"
	        style="@style/friend_information_detail_majia_Style"
	        android:src="@drawable/h001" />
	    
        
        <TextView
            style="@style/commonStyleTextView"
            android:id="@+id/changePhotoHeadMap"
            android:gravity="center_vertical|left"
            android:layout_height="fill_parent"
            android:text="更换头像"
            android:ems="10" />

	</LinearLayout>

    <LinearLayout
        android:id="@+id/nichengLine"
        android:layout_width="fill_parent"
    	android:layout_height="50.0dip"
    	android:background="@drawable/common_back_ground"
    	android:orientation="horizontal" >

        <TextView
            style="@style/commonStyleTextView"
			android:text="昵称:"
             />
        
        <TextView
            android:id="@+id/myInformationNiCheng"
            style="@style/commonStyleTextView"
            android:text="阿童木"
            android:ems="16" />

	</LinearLayout>

    <LinearLayout
        android:id="@+id/erweimaLine"
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:background="@drawable/common_back_ground"
        android:orientation="horizontal" >

        <TextView
             style="@style/commonStyleTextView"
            android:text="二维码名片:"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/two_dimension_code"
            android:id="@+id/myInformationErweimaView"/>


    </LinearLayout>
</LinearLayout>