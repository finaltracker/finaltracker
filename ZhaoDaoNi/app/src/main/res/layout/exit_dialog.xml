<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exit_layout"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/confirm_dialog_bg2" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:padding="5dp"
            android:textColor="#333"
            android:textSize="20sp"
            android:text="往此位置扔一个炸弹" />


    <TextView
        android:id="@+id/saySomeThing"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="left"
        android:hint="说点啥吧" />
    <TextView

        android:id="@+id/scheduleArrivedTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textColor="#333"
        android:hint="设置预期到达时间"
        android:textSize="16sp" />

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"           
            android:layout_marginTop="33dp"
            android:layout_marginBottom="8dp"
             >
            
            <Button
              android:id="@+id/exitBtn0"
              android:layout_width="110dp"
              android:layout_height="wrap_content"
              android:text="启动"
              android:textSize="16sp"
              android:textColor="#fff"
              android:gravity="center"
			  android:onClick="exitbutton1"
              />
            
            <Button
              android:id="@+id/exitBtn1"
              android:layout_width="110dp"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:text="退出"
              android:textSize="16sp"
              android:textColor="#333"
              android:gravity="center"
			  android:onClick="exitbutton0"
              />
        </LinearLayout>

    </LinearLayout>
