<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="6.0dip"
    android:paddingTop="6.0dip" 
    android:background="@drawable/list_group_item_background">
    
    
    <ImageView
        android:id="@+id/add_friend_detail_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10.0dip"
        android:src="@drawable/ic_launcher"
        android:contentDescription="@string/app_name" 
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/add_friend_detail_item_name"
        android:layout_width="fill_parent"
        android:layout_height="25.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_toRightOf="@id/add_friend_detail_icon"
        android:drawableRight="@drawable/terminal_icon_ios"
        android:ellipsize="end"
        android:gravity="left|center"
        android:includeFontPadding="false"
        android:padding="0.0dip"
        android:singleLine="true"
        android:textSize="16.0sp" />
    
    <ImageView
        android:id="@+id/add_friend_detail_expand"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@id/add_friend_detail_item_name"
        android:contentDescription="@string/app_name"
        android:src="@drawable/right_arrow" />

</RelativeLayout>
